{
  "compilerOptions": {
    /* === Paths & Module Resolution === */
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"]
    },
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* === Target Environment === */
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node"],

    /* === Build Outputs === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Compatibility === */
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
